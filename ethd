  fi
  var="MEV_BOOST"
  value=$(sed -n -e "s/^${var}=\(.*\)/\1/p" "${ENV_FILE}" || true)
  # I do mean to match literally
  # shellcheck disable=SC2076
  if [[ "${CONSENSUS_CLIENT}" =~ "-vc-only.yml" ]]; then
